<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.falcon.assessment.repository.AccessLogRepository">

    <insert id="insertAll" parameterType="java.util.List">

    </insert>

    <insert id="insertEmployeeList" parameterType="java.util.List">
        INSERT ALL
        <foreach collection="list" item="element" index="index" >
            INTO EMPLOYEE (id,name) values (#{element.id},#{element.name})
        </foreach>
        SELECT * FROM dual
    </insert>

    <select id="findAll" resultType="io.falcon.assessment.model.AccessLog" >
        SELECT seq
             , request
             , method
             , response
             , referrer
             , message
             , log_datetime
             , inserted_at
          FROM falcon.access_log
         ORDER
            BY seq ASC
         LIMIT #{offset}, #{size}
    </select>

</mapper>
